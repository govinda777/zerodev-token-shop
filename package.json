{
  "name": "zerodev-token-shop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"usePrivyAuth|LoginDemo|PrivyLoadingScreen|ProductCard|AuthButton\" --passWithNoTests --watchAll=false",
    "test:unit:watch": "jest --testPathPattern=\"usePrivyAuth|LoginDemo|PrivyLoadingScreen|ProductCard|AuthButton\" --watch",
    "test:unit:coverage": "jest --testPathPattern=\"usePrivyAuth|LoginDemo|PrivyLoadingScreen|ProductCard|AuthButton\" --coverage --passWithNoTests --watchAll=false",
    "test:all": "jest --passWithNoTests --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:critical": "playwright test -g @critical",
    "test:e2e:no-critical": "playwright test -g @no-critical",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:all": "node scripts/run-tests.js",
    "test:e2e:critical-only": "node scripts/run-tests.js --tag @critical",
    "push:skip-tests": "git push --no-verify",
    "push:all-tests": "node scripts/pre-push-test.js --all-tests && git push",
    "prepare": "husky"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@privy-io/react-auth": "^2.13.3",
    "@types/winston": "^2.4.4",
    "@zerodev/ecdsa-validator": "^5.4.9",
    "@zerodev/sdk": "^5.4.35",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "uuid": "^9.0.1",
    "viem": "^2.29.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
